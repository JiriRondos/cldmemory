# Qdrant Configuration
# Supports both HTTP and HTTPS URLs
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=human_memories

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small

# MCP Server Configuration
MCP_SERVER_NAME=memory-server
MCP_SERVER_PORT=3000

# Node Environment
NODE_ENV=production

# Memory Configuration
# Optional metadata to be included with all memories
# Format: "key:value,key2:value2" or just "value" (will be stored as user:value)
# Examples: "server:prod,user:john" or "davidstrejc"
MEMORY_METADATA=

# Similarity threshold for memory searches (0-1, lower = broader matches)
SIMILARITY_THRESHOLD=0.3